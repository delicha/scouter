<%= render "shared/header" %>

  <body>
    <%= render "shared/nav" %>
    <div class="container text-center mb-4">
      <% if current_user %>
        <div class="mb-3">
          <small class="text-info">[<%= current_user.name %> さんログイン中</small><br />
          <i class="fa-solid fa-circle-p text-danger"></i><small class="text-info">所持ポイント：<%= current_user.point %> pts]</small>
        </div>
      <% end %>
      <% if flash.notice %>
        <div class="alert alert-success mt-5"><%= flash.notice %></div>
      <% end %>
      <%= yield %>

      <%= render "shared/footer" %>
    </div>
    

  </body>
</html>
