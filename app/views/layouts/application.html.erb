<%= render "shared/header" %>

  <body>
    <%= render "shared/nav" %>
    <div class="container text-center mb-4">
      <% if current_user %>
        <div class="mb-3">
          <small class="text-info">[<%= current_user.name %> さんログイン中]</small><br />
          <i class="fa-solid fa-square-p text-danger"></i><small class="text-danger"> <%= current_user.point %> ポイント所持</small>
        </div>
      <% end %>
      <% if flash.notice %>
        <div class="alert alert-success mt-5"><%= flash.notice %></div>
      <% end %>
      <%= yield %>

      <%= render "shared/footer" %>
    </div>
    

  </body>
</html>
